<% layout("./layout/boilerplate") %>
<h1 class="text-center">Create a new Restaurant</h1>
<div class="col-6 offset-3">
    <form action="/restaurants" method="POST">
        <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="restaurant[name]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Restaurant Location</label>
            <input class="form-control" type="text" id="location" name="restaurant[location]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Restaurant Image</label>
            <input class="form-control" type="text" id="image" name="restaurant[image]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Restaurant Price</label>
            <select class="form-control" name="restaurant[price]" id="price">
                <option value="$">$</option>
                <option value="$$">$$</option>
                <option value="$$$">$$$</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Restaurant Description</label>
            <input class="form-control" type="text" id="description" name="restaurant[description]">
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Submit</button>
        </div>
    </form>
    <a href="/restaurants">Go back to all the restaurants</a>
</div>